# ============================================
# Application Settings
# ============================================
# Generate a secure key using: python scripts/generate_secret_key.py
SECRET_KEY=your-secret-key-here

DEBUG=True
ENVIRONMENT=development  # development | production

# ============================================
# Database Configuration
# ============================================
DATABASE_URL_SQLITE=sqlite+aiosqlite:///./workflows.db

# Set to true to log all SQL queries 
# Keep false to avoid cluttering terminal output (# Enable to debug database issue)
DATABASE_ECHO=false

# ============================================
# Slack Integration (Optional)
# ============================================
# Leave empty to disable Slack notifications
SLACK_BOT_TOKEN=
SLACK_SIGNING_SECRET=
SLACK_CHANNEL_ID=

# ============================================
# Approval Settings
# ============================================
DEFAULT_APPROVAL_TIMEOUT_SECONDS=3600
CALLBACK_BASE_URL=http://localhost:8000

# ============================================
# Frontend Configuration (JavaScript URLs)
# ============================================
# These URLs are injected into the frontend JavaScript
# For local development, use localhost URLs
FRONTEND_API_BASE_URL=http://localhost:8000
FRONTEND_CHAT_AGENT_URL=http://localhost:8501


# ============================================
# Server Configuration
# ============================================
HOST=0.0.0.0
PORT=8000

# ============================================
# External API Keys
# ============================================
OPENAI_API_KEY=your-openai-api-key-here
